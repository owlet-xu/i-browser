    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Electron",
            // "preLaunchTask": "start",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
            "outFiles": ["${workspaceFolder}/build/resources/main/**/*.js"],
            "args": ["${workspaceFolder}/build/resources"],
            "sourceMaps": true,
            "outputCapture": "std"
          }
    ]
}